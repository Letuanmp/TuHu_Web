@model IEnumerable<TuHu_Web.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<main>

    <div class="row">


        @{
            ViewBag.Title = "Home Page";

            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        <style>
            .zoom {
                transition: transform .4s ease;
            }

            .item:hover .zoom {
                transform: scale(1.1);
            }
        </style>

        @* slice *@
        <div style="margin-top: 132px">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    @*<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>*@
                </ol>
                <div class="carousel-inner h-100">
                    <div class="carousel-item active">
                        <img src="~/Data/images/slice/TUHU2.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Data/images/slice/TUHU3.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Data/images/slice/TUHU2.jpg" class="d-block w-100" alt="...">
                    </div>
                    @*<div class="carousel-item">
                            <img src="~/Data/images/slice/tuhu9tuoi.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Data/images/slice/TuHu5.jpg" class="d-block w-100" alt="...">
                        </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        @* Danh mục món ăn *@
        <div class="col-md-12">
            <div style="display: flex; align-items: center; column-gap: 20px">
                <span style="font-size: xx-large; font-weight: 700; color: #343a40">Danh mục món ăn</span>
                <div style="width: 75% ; height: 2px; background-color: #6c757d; margin-top: 10px;"></div>
            </div>

            <div class="row">

                <div class="col-lg-3 col-md-12 mb-3">
                    <a href="@Url.Action("Bread", "Home")" class="item" style="display: flex; flex-direction: column; height: 280px; box-shadow: 0 1px 6px 0 rgba(0,0,0,.2); border-radius: 4px; background-color: white; cursor:pointer">
                        <div class="bg-image" style="height: 230px; overflow: hidden">
                            <img src="~/Uploads/BannerBanhMy.jpg" style="width: 100%" class="zoom" />
                        </div>
                        <div style="display: flex; height: 30px; padding: 10px;">
                            <span style="color: #343a40; font-weight:700; font-size:18px">Bánh Mỳ</span>
                            <span style="color: #343a40; font-weight:900; font-size:18px; margin-left:6px; font-size: 24px; margin-top: -6px; "> > </span>
                        </div>
                    </a>

                </div>

                <div class="col-lg-3 col-md-12 mb-3">
                    <a href="@Url.Action("Combo", "Home")" class="item" style="display: flex; flex-direction: column; height: 280px; box-shadow: 0 1px 6px 0 rgba(0,0,0,.2); border-radius: 4px; background-color: white; cursor:pointer">
                        <div class="bg-image" style="height: 230px; overflow: hidden">
                            <img src="~/Uploads/TuHuCombo.jpg" style="width: 100%" class="zoom" />
                        </div>
                        <div style="display: flex; height: 30px; padding: 10px;">
                            <span style="color: #343a40; font-weight:700; font-size:18px">Combo</span>
                            <span style="color: #343a40; font-weight:900; font-size:18px; margin-left:6px; font-size: 24px; margin-top: -6px; "> > </span>
                        </div>
                    </a>

                </div>

                <div class="col-lg-3 col-md-12 mb-3">
                    <a href="@Url.Action("Drink", "Home")" class="item" style="display: flex; flex-direction: column; height: 280px; box-shadow: 0 1px 6px 0 rgba(0,0,0,.2); border-radius: 4px; background-color: white; cursor:pointer">
                        <div class="bg-image" style="height: 230px; overflow: hidden">
                            <img src="~/Uploads/TuHuLogoDrink.jpeg" style="width: 100%" class="zoom" />
                        </div>
                        <div style="display: flex; height: 30px; padding: 10px;">
                            <span style="color: #343a40; font-weight:700; font-size:18px">Đồ Uống</span>
                            <span style="color: #343a40; font-weight:900; font-size:18px; margin-left:6px; font-size: 24px; margin-top: -6px; "> > </span>
                        </div>
                    </a>

                </div>

                    
                 <div class="col-lg-3 col-md-12 mb-3">
                    <a href="@Url.Action("SandWich", "Home")" class="item" style="display: flex; flex-direction: column; height: 280px; box-shadow: 0 1px 6px 0 rgba(0,0,0,.2); border-radius: 4px; background-color: white; cursor:pointer">
                        <div class="bg-image" style="height: 230px; overflow: hidden">
                            <img src="~/Uploads/TuHuLogoSandWich.jpeg" style="width: 100%" class="zoom" />
                        </div>
                        <div style="display: flex; height: 30px; padding: 10px;">
                            <span style="color: #343a40; font-weight:700; font-size:18px">SandWich</span>
                            <span style="color: #343a40; font-weight:900; font-size:18px; margin-left:6px; font-size: 24px; margin-top: -6px; "> > </span>
                        </div>
                    </a>

                </div>

            </div>
        </div>


    </div>
</main>