@model IEnumerable<TuHu_Web.Models.Staff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style=" font-size:40px;text-align:center">Nhân Viên</h2>


<table class="table" style="margin-left: 100px; border: 2px solid black; width: 80% ">
    <tr style="border: 2px solid black; font-size:15px">
        <th>
            <div>Tên Nhân Viên</div>
        </th>
        <th>
            <div>Số Điện Thoại</div>
        </th>
        <th>
            <div>Ngày Sinh</div>

        </th>
        <th>
            <div>Quê Quán</div>
        </th>
        <th>
            <div>Tuổi</div>
        </th>
        <th>
            <div>Chỗ Ở Hiện Tại</div>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="width: 10px">
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Name_Of_Staff)
            </td>
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Phone_Number_Of_Staff)
            </td>
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Date_Of_Birth)
            </td>
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Native_Place)
            </td>
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Accommodation)
            </td>
            <td style="border-bottom: 2px solid black">
                <button>
                    @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.Id_Staff })
                </button>
                <button>
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id_Staff })
                </button>
                <button>
                    @Html.ActionLink("Xoá", "Delete", new { id = item.Id_Staff })
                </button>
            </td>
        </tr>
    }

</table>
<button style="margin-bottom: 5px; background-color: aquamarine; font-size: 15px; border-radius: 5px; width: 80px; height: 30px; margin-left: 100px; color: black">
    @Html.ActionLink("Thêm", "Create")
</button>