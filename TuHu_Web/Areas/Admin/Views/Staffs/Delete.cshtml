@model TuHu_Web.Models.Staff

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; font-size:40px; margin-bottom: 30px">Xoá thông tin nhân viên</h2>

<h3 style="margin-left: 30px">Bạn Có Chắc Chắn Muốn Xoá Không ?</h3>
<div>
    <h4 style="margin-left: 30px">Nhân viên</h4>
    <hr />
    <dl class="dl-horizontal" style=" margin-left: 100px; border: 2px solid black; width: 90% ">
        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Tên Nhân Viên</div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Name_Of_Staff)
        </dd>

        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Số Điện Thoại</div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Phone_Number_Of_Staff)
        </dd>

        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Ngày Sinh</div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Date_Of_Birth)
        </dd>

        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Quê Quán</div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Native_Place)
        </dd>

        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Tuổi</div>
        </dt>

        @*<dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Age)
        </dd>*@

        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Chỗ Ở Hiện Tại</div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Accommodation)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left: 30px">
            <input type="submit" value="Xác nhận" class="btn btn-default" style="background-color:aquamarine" />
            <button>
                @Html.ActionLink("Trở Về Danh Sách", "Index")
            </button>
        </div>
    }
</div>
