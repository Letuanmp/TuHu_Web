@model TuHu_Web.Models.Provider

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style=" font-size:40px;text-align:center; padding-top:20px">Thêm nhà cung cấp</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="margin-left: 60px">Nhà Cung Cấp</h4>
        <hr />
        <div style="margin-left: 100px; border: 2px solid black; width: 80% ">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">ID</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Id_Provider, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Id_Provider, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">Tên Nhà Cung Cấp</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name_Provider, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name_Provider, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">Địa Chỉ</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Address_Provider, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address_Provider, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">Số Điện Thoại</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Phone_Number_Provider, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone_Number_Provider, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">Email</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email_Provider, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email_Provider, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group" style="margin-top: 20px">
            <div class="col-md-offset-2 col-md-10" style="margin-left:100px">
                <input type="submit" value="Thêm" class="btn btn-default" style="height: 37px; background-color:aquamarine; color: black" />
                <button style="height: 35px">
                    @Html.ActionLink("Trở về trang danh sách", "Index")
                </button>
            </div>
        </div>
    </div>
}



