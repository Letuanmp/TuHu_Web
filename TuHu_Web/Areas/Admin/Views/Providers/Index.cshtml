@model IEnumerable<TuHu_Web.Models.Provider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style=" font-size:40px;text-align:center">Nhà Cung Cấp</h2>


<table class="table" ; style="margin-left: 100px; border: 2px solid black; width: 80% ">
    <tr style="border: 2px solid black; font-size:15px">
        <th>
            <div>Tên Nhà Cung Cấp</div>
        </th>
        <th>
            <div>Địa Chỉ</div>

        </th>
        <th>
            <div>Số Điện Thoại</div>
        </th>
        <th>
            <div>Email</div>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="width: 10px">
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Name_Provider)
            </td>
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Address_Provider)
            </td>
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Phone_Number_Provider)
            </td>
            <td style="border-bottom: 2px solid black">
                @Html.DisplayFor(modelItem => item.Email_Provider)
            </td>
            <td style="border-bottom: 2px solid black">
                <button>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id_Provider }) 

                </button>
                <button>
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id_Provider }) 

                </button>
                <button>
                    @Html.ActionLink("Xoá", "Delete", new { id = item.Id_Provider })

                </button>
            </td>
        </tr>
    }

</table>
<button style="margin-bottom: 5px; background-color: aquamarine; font-size: 15px; border-radius: 5px; width: 80px; height: 30px; margin-left: 100px; color: black">
    @Html.ActionLink("Thêm", "Create")
</button>
