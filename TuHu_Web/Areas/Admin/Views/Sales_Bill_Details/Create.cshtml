@model TuHu_Web.Models.Sales_Bill_Details

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style=" font-size:40px;text-align:center; padding-top:20px">Thêm chi tiết hóa đơn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="margin-left: 60px">Chi tiết hóa đơn </h4>
        <hr />
        <div style="margin-left: 100px; border: 2px solid black; width: 80% ">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">ID đơn bán</div>
                <div class="col-md-10">
                    @Html.DropDownList("Id_Bill_Of_Sale", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Id_Bill_Of_Sale, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">ID sản phẩm</div>
                <div class="col-md-10">
                    @Html.DropDownList("Id_Product", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Id_Product, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">Số lượng</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="border: 2px solid black; text-align:left; padding:5px 0px 10px 0px; margin:0px; font-size:15px">
                <div class="control-label col-md-2">Tổng giá</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Price_Bill_Details, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Price_Bill_Details, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group" style="margin-top: 20px">
            <div class="col-md-offset-2 col-md-10" style="margin-left:100px">
                <input type="submit" value="Thêm mới" class="btn btn-default" style="height: 37px; background-color:aquamarine; color: black" />
                <button style="height: 35px">
                    @Html.ActionLink("Trở về danh sách", "Index")
                </button>
            </div>
        </div>
    </div>
}
