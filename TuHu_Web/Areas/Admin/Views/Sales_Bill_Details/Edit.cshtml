@model TuHu_Web.Models.Sales_Bill_Details

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; font-size:40px; margin-bottom: 30px">Chỉnh sửa thông tin chi tiết đơn bán</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style=" margin-left: 100px; border: 2px solid black; width: 90% ">
        <h4 style="margin-left:10px; font-size: 15px; color:gray">Chi tiết hóa đơn bán</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Sales_Bill_Details)

        <div class="form-group">
            <div class="control-label col-md-2" style="font-size: 20px; text-align:center">Mã chi tiết hóa đơn</div>
            <div class="col-md-10" style="width:80%">
                @Html.DropDownList("Id_Bill_Of_Sale", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Bill_Of_Sale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2" style="font-size: 20px; text-align:center">Mã sản phẩm</div>
            <div class="col-md-10" style="width:80%">
                @Html.DropDownList("Id_Product", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Product, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2" style="font-size: 20px; text-align:center">Số lượng</div>
            <div class="col-md-10" style="width:80%">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2" style="font-size: 20px; text-align:center">Tổng giá đơn hàng</div>
            <div class="col-md-10" style="width:80%">
                @Html.EditorFor(model => model.Price_Bill_Details, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price_Bill_Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thay đổi" class="btn btn-default" style="background-color:aquamarine; color: black; margin-top:20px" />
            </div>
        </div>
    </div>
    <div style="margin-top: 20px; margin-left:15px">
        <button>
            @Html.ActionLink("Trở về danh sách", "Index")
        </button>
    </div>
}


