@model TuHu_Web.Models.Bill_Of_Sale

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; font-size:40px; margin-bottom: 30px">Chi tiết đơn bán</h2>


<div>
    <h4 style="margin-left: 30px">Đơn bán</h4>
    <hr />
    <dl class="dl-horizontal" style=" margin-left: 100px; border: 2px solid black; width: 90% ">
        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Tên khách hàng</div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Customer.Name_Customer)
        </dd>

        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Tên nhân viên</div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Staff.Name_Of_Staff)
        </dd>

        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>Ngày và giờ</div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Date_And_Time)
        </dd>

    </dl>
</div>
<p style="margin-left: 30px">
    <button style="background-color:aquamarine">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.Id_Bill_Of_Sale })
    </button>
    <button>
        @Html.ActionLink("Trở về danh sách", "Index")
    </button>
</p>
