@model TuHu_Web.Models.Login

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; font-size:40px; margin-bottom: 30px">Chi tiết tài khoản</h2>


<div>
    <h4 style="margin-left: 30px">Tài Khoản</h4>
    <hr />
    <dl class="dl-horizontal" style=" margin-left: 100px; border: 2px solid black; width: 90% ">
        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>
                Tên vị trí
            </div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Position.Name_Position)
        </dd>

        <dt style="border: 2px solid black; text-align:left; padding-left:5px">
            <div>
                Mật khẩu
            </div>
        </dt>

        <dd style="border: 2px solid black; padding-left:5px">
            @Html.DisplayFor(model => model.Password)
        </dd>

    </dl>
</div>
<p style="margin-left: 30px">
    <button style="background-color:aquamarine">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.UserName })
    </button>
    <button>
        @Html.ActionLink("Trở về trang danh sách", "Index")
    </button>
</p>
